extends layout

block content    
    p 
    #login-container.span6.offset3
        form( method="post")#login-form.well.span4
            h1 #{title}
            input(type="hidden", name="returnUrl", id="returnUrl")
            p.subheading Please Login To Your Account
            label Username 
            input(type="text", name="user", id='user', required).span4.required
            label Password
            input(type="password", name="password", id='password', required).span4.required
            button(type="submit")#btn-login.btn.btn-primary
                i.icon-lock.icon-white
                |     Sign in            
            div.clear-fix
            hr
            div.btm-links
                a(href='#')#forgot-password Forgot Your Password?                


    #loginFailed.modal.hide.fade
        .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') x
            h3 Login error
          .modal-body
            p Wrong user name or password!
          .modal-footer
            button.btn.btn-primary(type='button', data-dismiss='modal', aria-hidden='true') Close            

 block scripts
    script
        function getURLParameter(name) {
            return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search)||[,""])[1].replace(/\+/g, '%20'))||null;
        }
        $('#returnUrl').val(getURLParameter('returnUrl'));
        if (getURLParameter('loginfailed')=='true')
            $('#loginFailed').modal('show');       